<body>

    <div class="container">
        <h2>Threads/IG 網址縮短器</h2>
        
        <div class="input-group">
            <label for="urlInput">請在此貼上完整網址：</label>
            <textarea id="urlInput" placeholder="範例：https://www.threads.com/.../?xmt=..."></textarea>
            <div class="hint">系統將自動移除 ?xmt= 或 ?igsh= 後方的追蹤參數</div>
        </div>

        <button id="shortenBtn" onclick="processUrl()">縮短網址並複製</button>
        
        <div id="status-msg">已縮短並複製到剪貼簿！</div>
    </div>

    <script>
        function processUrl() {
            const textarea = document.getElementById('urlInput');
            const statusMsg = document.getElementById('status-msg');
            let url = textarea.value.trim();

            if (!url) {
                alert("請先貼上網址！");
                return;
            }

            // 1. 核心邏輯：使用正規表達式移除指定參數
            // 说明：\? 匹配問號，(xmt|igsh) 匹配這兩個關鍵字之一，=.* 匹配後面的所有內容
            const regex = /\?(xmt|igsh)=.*/;
            
            // 替換網址內容
            const cleanUrl = url.replace(regex, '');

            // 2. 將變更直接顯示在文字區塊中
            textarea.value = cleanUrl;

            // 3. 複製到剪貼簿
            navigator.clipboard.writeText(cleanUrl).then(() => {
                // 成功複製後的視覺回饋
                showStatus("✅ 已縮短並複製成功！");
            }).catch(err => {
                // 如果瀏覽器不支援自動複製，顯示縮短成功但需手動複製
                console.error('複製失敗:', err);
                showStatus("✅ 已縮短 (請手動複製)");
                textarea.select(); // 全選文字方便使用者手動複製
            });
        }

        // 顯示狀態訊息並在 2 秒後消失
        function showStatus(text) {
            const msgEl = document.getElementById('status-msg');
            msgEl.textContent = text;
            msgEl.style.opacity = '1';
            
            setTimeout(() => {
                msgEl.style.opacity = '0';
            }, 2000);
        }
    </script>
</body>
